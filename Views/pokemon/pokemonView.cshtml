@{
}

<!-- modelo pokemonModel -->
@model pokemonModel

<!-- plantilla pokémon -->
<div class="card-pokemon-content">

    <!-- nombre pokémon -->
    <div class="pokemon-name">
        <p>@Model.name</p>
    </div>

    <!-- sprite pokémon -->
    <div class="pokemon-sprites">

        <!-- sprite normal -->
        <img src="@Model.sprites?.front_default" alt="@Model.name" />

        <!-- sprite shiny -->
        <img src="@Model.sprites?.front_shiny" alt="@Model.name shiny" />

    </div>

    <!-- tabla tipos -->
    <table>

        <!-- encabezado tabla tipos -->
        <thead>
            <tr>
                <th>Tipo</th>
            </tr>
        </thead>

        <!-- cuerpo tabla tipos -->
        <tbody>

            <!-- hacer un listado de los tipos -->
            @foreach (var type in Model.types)
            {
                <tr>
                    <td>@type.type?.name</td>
                </tr>
            }

        </tbody>

    </table>

    <!-- tabla movimientos -->
    <table>

        <!-- encabezado tabla tipos -->
        <thead>
            <tr>
                <th>Movimiento</th>
            </tr>
        </thead>

        <!-- cuerpo tabla tipos -->
        <tbody>

            <!-- hacer un listado de los tipos -->
            @foreach (var move in Model.moves)
            {
                <tr>
                    <td>@move.move?.name</td>
                </tr>
            }

        </tbody>

    </table>

</div>